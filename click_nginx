server {
    server_name api.tema2.sector-soft.ru www.api.tema2.sector-soft.ru;


    client_max_body_size 100M;




    location = /api/v1/webhook/click/prepare {
        proxy_pass https://unleased-maddison-goodish.ngrok-free.dev;
        proxy_set_header Host unleased-maddison-goodish.ngrok-free.dev;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_ssl_server_name on;
    }

    location = /api/v1/webhook/click/complete {
        proxy_pass https://unleased-maddison-goodish.ngrok-free.dev;
        proxy_set_header Host unleased-maddison-goodish.ngrok-free.dev;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_ssl_server_name on;
    }

    location / {
        proxy_pass http://unix:/home/tema/sockets/gunicorn.sock;
        #proxy_pass http://127.0.0.1:8002;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /static/ {
        alias /home/tema/tema/static/;
    }

    location /media/ {
        alias /home/tema/tema/media/;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api.tema2.sector-soft.ru/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.tema2.sector-soft.ru/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.api.tema2.sector-soft.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = api.tema2.sector-soft.ru) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name api.tema2.sector-soft.ru www.api.tema2.sector-soft.ru;
    return 404; # managed by Certbot




}